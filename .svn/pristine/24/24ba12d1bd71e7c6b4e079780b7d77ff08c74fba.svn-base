section.cover {
	background-color: #F2F2F2;
	background-image: url('/_media/porism.logo.solid.svg');
	background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
}

section.cover .cover-main h1 {
    width: 50%;
    margin-left: auto;
	margin-right: auto;
	font-weight: bold;
}

section.cover .cover-main h1 a span {
	color: #F2F2F2;
}


section.cover .cover-main p img {
	max-width: 8%;
    position: relative;
    top: -6em;
}