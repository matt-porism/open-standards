@import url("https://fonts.googleapis.com/css?family=Roboto:300,400,500,700");

* {
    margin: 0;
    box-sizing: border-box;
}

html, body {
    font-size: 10px;
    font-family: 'Open Sans', sans-serif;    
    color: #444547;
    height: 100%;
}

body {
    min-height: 100%;
    position: relative;
}

h1, h2, h3, h4, h5, h6, p {
    margin: 0;
}

a {
    color: inherit;
    text-decoration: none;
}

a:hover { 
    text-decoration: underline;
}

body > header {
    background-color: #333333;
    height: 6rem;
}

body > header > .center {
    max-width: 99rem;
    padding: 1rem 1.5rem;
    margin: 0 auto;
}

body > header a.logo {
    display: inline-block;
    height: 4rem;
    line-height: 4rem;
}

body > header a.logo img {
    height: 4rem;
}

form.search {
    display: flex;
    float: right;

    height: 3rem;
    padding-top: 0.5rem;
}

form.search input, form.search button {
    height: 3rem;
    margin: 0;
    padding: 0.5rem;
    border: none;
    font-size: 1.6rem;
    border-radius: 0;
}

form.search input::placeholder {
    color: #c2c2c2;
}

form.search button {
    background-color: #e2e2e2;
}

form.search img {
    height: 1.6rem;
    padding: 0.2rem;
}

main {
    min-height: calc(100% - 6rem);

    margin-bottom: -10rem; 
}

main:after {
    height: 10rem;
    content: "";
    display: block;
}

body > footer {
	background-color: #333333;
    height: 10rem;
}

main .center, body > footer > .center {
    max-width: 99rem;
    padding-left: 1.5rem;
    padding-right: 1.5rem;
    margin: 0 auto;
}

main > header {
    background-color: #00A0EA;
    color: white;
    padding: 3rem 0;
}

main > header h1 {
    font-size: 4.8rem;
    padding-bottom: 2rem;
}

main > header p {
    font-size: 2rem;
}

section.table-of-contents {    
    padding-top: 2rem;
}

ol.table-of-contents {
    margin: 0;
    padding: 0;
    list-style: none;

    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-content:  flex-start;    
}

ol.table-of-contents li {
    box-sizing: border-box;
    background-color: #f2f2f2;
    width: 100%;
    padding: 2rem;
    margin-bottom: 2rem;
}

@media (min-width: 760px) {
    ol.table-of-contents li {
        width: 48%;
    }
} 

ol.table-of-contents li h2 {
    color: #00A0EA;
    font-size: 3rem;
    padding-bottom: 2rem;
}

ol.table-of-contents li p {
    font-size: 2rem;
}



ol.logos {
    margin: 0;
    padding: 0;
    list-style: none;

    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-content:  flex-start;   
    
    height: 4rem;
    padding-top: 3rem; 
}

ol.logos li {
    padding-right: 4rem;
}

ol.logos li img {
    max-height: 4rem;
}