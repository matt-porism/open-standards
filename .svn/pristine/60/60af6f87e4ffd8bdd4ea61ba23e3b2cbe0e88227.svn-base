body > header, body > footer {
    width: 100%;
}

body > header {
    position: fixed;
    top: 0;
}

body > footer {
    position: fixed;
    bottom: 0;
}

body > header > .center,
body > footer > .center {
    min-width: 100%;
}

body .sidebar {
    top: 6rem;
    bottom: 10rem;
}

.markdown-section:last-child {
    padding-bottom: 12rem;
}

.markdown-section h2 a, 
.markdown-section h3 a, 
.markdown-section h4 a, 
.markdown-section h5 a, 
.markdown-section h6 a {
    padding-top: 7rem;
}

aside.sidebar h1 {
    display: none;
}

.sidebar-toggle {
    bottom: 10rem;
    width: auto;
}